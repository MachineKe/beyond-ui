{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "emitDeclarationOnly": false,
    "noEmit": false,
    "allowJs": true,
    "declarationDir": "./dist",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/main.tsx",
    "src/App.tsx",
    "src/**/*.example.tsx",
    "src/**/*.stories.tsx",
    "tests",
    "stories"
  ]
}