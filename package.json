{
  "name": "@beyondcorp/beyond-ui",
  "version": "1.0.40",
  "description": "A comprehensive React UI component library built with TypeScript, TailwindCSS, and CVA",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/styles.css",
    "dist/components/**/*",
    "dist/contexts/**/*",
    "dist/services/**/*",
    "dist/hooks/**/*",
    "dist/utils/**/*",
    "dist/theme/**/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && tsc && vite build",
    "build:css": "tailwindcss -i ./src/styles/lib.css -o ./dist/styles.css --content \"./dist/components/**/*.{js,jsx}\" --minify",
    "build:lib": "rollup -c && tsc --project tsconfig.build.json --emitDeclarationOnly && npm run build:css",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "tailwindcss",
    "typescript",
    "design-system"
  ],
  "author": "Beyond Corp",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@types/prismjs": "^1.26.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.344.0",
    "prismjs": "^1.30.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.9.1",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.2.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-actions": "^7.6.6",
    "@storybook/addon-controls": "^7.6.6",
    "@storybook/addon-docs": "^7.6.6",
    "@storybook/addon-essentials": "^7.6.6",
    "@storybook/blocks": "^7.6.6",
    "@storybook/react": "^7.6.6",
    "@storybook/react-vite": "^7.6.6",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "rollup": "^4.50.1",
    "storybook": "^7.6.6",
    "tailwindcss": "^3.4.1",
    "tsup": "^7.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-dts": "^3.9.1"
  }
}
